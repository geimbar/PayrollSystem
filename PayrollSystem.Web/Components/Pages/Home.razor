@page "/"
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@attribute [Authorize]

<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Dashboard</MudText>
<MudText Class="mb-8">Welcome to the Payroll System</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6">Employees</MudText>
            <MudText Typo="Typo.h3" Color="Color.Primary">24</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Active employees</MudText>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6">Departments</MudText>
            <MudText Typo="Typo.h3" Color="Color.Primary">5</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Active departments</MudText>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6">This Month</MudText>
            <MudText Typo="Typo.h3" Color="Color.Primary">$125K</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Payroll total</MudText>
        </MudPaper>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="3">
        <MudPaper Elevation="2" Class="pa-4">
            <MudText Typo="Typo.h6">Pending</MudText>
            <MudText Typo="Typo.h3" Color="Color.Primary">3</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Actions required</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<MudPaper Elevation="2" Class="pa-4 mt-4">
    <MudText Typo="Typo.h6" GutterBottom="true">Recent Activity</MudText>
    <MudStack Spacing="2">
        <MudPaper Outlined="true" Class="pa-3">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="mr-3" />
                <MudText>New employee added: John Smith</MudText>
            </div>
        </MudPaper>
        <MudPaper Outlined="true" Class="pa-3">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.Payment" Class="mr-3" />
                <MudText>Payroll processed for December</MudText>
            </div>
        </MudPaper>
        <MudPaper Outlined="true" Class="pa-3">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3" />
                <MudText>Department updated: Engineering</MudText>
            </div>
        </MudPaper>
    </MudStack>
</MudPaper>

@code {
    // You can add code here to fetch real data from your database
}
